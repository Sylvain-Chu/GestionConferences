@model GestionConferences.Models.Entity.Inscription

@{
    ViewBag.Title = "Inscription à une conférence";
}

<h2>Inscription à une conférence</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Html.Raw(ViewBag.nomConference)</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.IdPersonne)
        @Html.HiddenFor(m => m.IdConference)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirmer l'inscription" class="btn btn-default" />
            </div>
        </div>
    </div>
}

